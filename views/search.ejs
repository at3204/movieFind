    <div class="container">
        <form action="/result" method="GET" class="text-center col-md-8 col-md-offset-2">
            <div class="text-center input-group">
                <input type="search" class="form-control" placeholder="Type tittle here" name="m">
                <div class="input-group-btn"> 
                    <button class="btn btn-primary" type="submit">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                </div>
            </div>
            <div class="text-center" style="margin: 2% 0% 2% 0%">
                <label><strong>Type :</strong></label>
                <label class="radio-inline"><input type="radio" name="t" value="" checked>all</label>
                <label class="radio-inline"><input type="radio" name="t" value="movie">movie</label>
                <label class="radio-inline"><input type="radio" name="t" value="series">series</label>
                <label class="radio-inline"><input type="radio" name="t" value="game">game</label>
            </div>
            <div class="form-inline text-center">
                <div class="form-group" style="margin: 0% 0% 30% 0%">
                    <label><strong>Year :</strong></label>
                    <input type="text" class="form-control" placeholder="Type here" name="y">
                </div>
            </div>
        </form>
    </div>
</div>
